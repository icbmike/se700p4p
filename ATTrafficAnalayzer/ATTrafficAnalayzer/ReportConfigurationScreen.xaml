<UserControl x:Class="ATTrafficAnalayzer.ReportConfigurationScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ComboBox
            Grid.Row="0"
            Grid.Column="0"
            ItemsSource="{Binding IntersectionList}"
            SelectedValue="{Binding SelectedIntersection}"
            SelectionChanged="onIntersectionSelectionChanged" />
        <ListView Grid.Column="0"
                  Grid.Row="1"
                  Background="Beige"
                  VerticalAlignment="Stretch"
                  ItemsSource="{Binding Path=DetectorList, Mode=TwoWay}">
            
        </ListView>
    </Grid>
</UserControl>
