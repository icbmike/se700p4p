<Window
    x:Class="ATTrafficAnalayzer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="967"
    Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="378*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="250" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="914*" />
        </Grid.ColumnDefinitions>

        <Menu
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <MenuItem
                Header="_File"
                DockPanel.Dock="Top">
                <MenuItem
                    Header="_Import VS File"
                    Click="MenuItemImportClick" />
            </MenuItem>
        </Menu>
        <ToolBarTray
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <ToolBar
                Band="1"
                BandIndex="1">
                <RadioButton
                    Name="graphradio"
                    GroupName="display"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Checked="switchDisplay"
                    Content="Graph"></RadioButton>
                <RadioButton
                    Name="tableradio"
                    GroupName="display"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="Table"
                    Checked="switchDisplay"></RadioButton>
                <Label
                    Margin="5,0,0,0">Start Date:</Label>
                <DatePicker />
                <Label
                    Margin="5,0,0,0">End Date:</Label>
                <DatePicker />
                <RadioButton
                    Margin="5,0,0,0"
                    GroupName="mode"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="VS"
                    Checked="switchMode"></RadioButton>
                <RadioButton
                    GroupName="mode"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="SM"
                    Checked="switchMode"></RadioButton>
            </ToolBar>
        </ToolBarTray>

        <StackPanel
            Grid.Column="0"
            Grid.Row="2"
            HorizontalAlignment="Left"
            Margin="0,0,0,0"
            Name="stackPanel1"
            VerticalAlignment="Top">
            <Label
                Content="Standard Reports"
                Height="28"
                Name="label1" />
            <StackPanel
                Grid.Column="0"
                Grid.Row="2"
                HorizontalAlignment="Left"
                Margin="0,0,0,0"
                Name="stackPanel2"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <Button
                    Content="New"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="newBtn"
                    VerticalAlignment="Top" />

                <Button
                    Content="Modify"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="modifyBtn"
                    VerticalAlignment="Top" />

                <Button
                    Content="Save"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="saveBtn"
                    VerticalAlignment="Top" />

                <Button
                    Content="Delete"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="deleteBtn"
                    VerticalAlignment="Top" />

            </StackPanel>


            <TabControl
                HorizontalAlignment="Left"
                Name="tabControl1"
                Margin="0,0,0,0"
                TabStripPlacement="Bottom">
                <TabItem
                    Header="Standard Reports"
                    Name="standardReportsTab">
                    <Grid
                        DataContext="{Binding}">
                        <ListBox
                            Height="780"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,0"
                            Name="standardReportsListBox"
                            Width="247" />
                        <ScrollBar
                            Height="780"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,0"
                            Name="scrollBar1"
                            VerticalAlignment="Top"
                            Width="18" />
                    </Grid>
                </TabItem>
                <TabItem
                    Header="Special Reports"
                    Name="specialReportsTab">
                    <Grid
                        DataContext="{Binding}">
                        <ListBox
                            Height="780"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,0"
                            Name="specialReportsListBox"
                            Width="247" />
                    </Grid>
                </TabItem>

            </TabControl>
        </StackPanel>

        <ContentControl
            x:Name="mainContentControl"
            Grid.Column="1"
            Height="1000"
            Width="1000"
            Grid.Row="2" />

    </Grid>
</Window>
