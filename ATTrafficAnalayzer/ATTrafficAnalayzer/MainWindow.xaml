<Window

    x:Class="ATTrafficAnalayzer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="800"
    xmlns:ta="clr-namespace:ATTrafficAnalayzer"
    Width="1000">

    <DockPanel
        LastChildFill="True">

        <Menu
            DockPanel.Dock="Top">
            <Menu.Background>
                <SolidColorBrush />
            </Menu.Background>
            <MenuItem
                Header="_FILE"
                DockPanel.Dock="Top"
                FontSize="14">
                <MenuItem
                    Name="fileImportMenuItem"
                    Header="_Import VS File" Click="fileImportMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <ToolBarTray
            Name="SettingsTray"
            DockPanel.Dock="Top">
            <ToolBarTray.DataContext>
                <ta:SettingsTray/>
            </ToolBarTray.DataContext>
            <ToolBar
                Band="1"
                BandIndex="1"
                VerticalContentAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Image
                    Height="26.6666666666667"
                    VerticalAlignment="Center"
                    Source="Resources/Images/home_icon.png" Margin="5,0" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                <RadioButton
                    Name="tableradio"
                    GroupName="display"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="Table"
                    Checked="SwitchScreen"
                    Background="White"></RadioButton>
                <RadioButton
                    Name="graphradio"
                    GroupName="display"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="Graph"
                    Checked="SwitchScreen"
                    Background="White"></RadioButton>
                <Label
                    Margin="5,0,0,0">Start Date:</Label>
                <DatePicker
                    Name="startDatePicker"
                    Background="White"
                    SelectedDate="{Binding StartDate}"/>
                <Label
                    Margin="5,0,0,0">End Date:</Label>
                <DatePicker
                    Name="endDatePicker"
                    Background="White"
                    SelectedDate="{Binding EndDate}"/>
                <Label
                    Margin="5,0,0,0">Interval:</Label>
                <ComboBox
                    Height="23"
                    Name="intervalComboBox"
                    Width="60"
                    SelectedValue="{Binding Path=Interval, Converter={ta:IntervalConverter}}"
                    SelectedValuePath="Content"
                    SelectedIndex="3">
                    <ComboBoxItem>1 min</ComboBoxItem>
                    <ComboBoxItem>5 min</ComboBoxItem>
                    <ComboBoxItem>15 min</ComboBoxItem>
                    <ComboBoxItem>30 min</ComboBoxItem>
                    <ComboBoxItem>60 min</ComboBoxItem>
                </ComboBox>
            </ToolBar>
        </ToolBarTray>

        <DockPanel
            LastChildFill="True"
            Margin="10" >
            <Label
                Content="Report Browser"
                Height="28"
                Name="label1"
                Background="#FF007ACC"
                FontWeight="Normal"
                FontSize="14"
                Foreground="White"
                Padding="5"
                DockPanel.Dock="Top" />
            <WrapPanel
                Name="stackPanel2"
                Orientation="Horizontal"
                DockPanel.Dock="Top">

                <Button
                    Content="_New"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="newBtn"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    OpacityMask="{x:Null}" Click="newBtn_Click"></Button>
                <Button
                    Content="_Edit"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="editBtn"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}" Click="editBtn_Click"></Button>
                <Button
                    Content="_Delete"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="deleteBtn"
                    VerticalAlignment="Top"
                    Background="{x:Null}" Click="deleteBtn_Click">
                    <Button.BorderBrush>
                        <SolidColorBrush />
                    </Button.BorderBrush>
                </Button>
                <Button
                	Content="Rename"
                	HorizontalAlignment="Left"
                	Margin="0,0,0,0"
                	x:Name="renameBtn"
                	VerticalAlignment="Top"
                	Background="{x:Null}"
                	BorderBrush="{x:Null}" Click="renameBtn_Click"/>
            </WrapPanel>

            <TabControl
                HorizontalAlignment="Left"
                Name="tabControl1"
                TabStripPlacement="Bottom"
                DockPanel.Dock="Top">
                <TabItem
                    Header="Standard Reports"
                    Name="standardReportsTab">
                    <DockPanel
                        LastChildFill="True">
                        <ScrollBar
                            Name="scrollBar1"
                            Width="20"
                            DockPanel.Dock="Right" />
                        <ListView
                            Name="standardReportsListBox"
                            DockPanel.Dock="Right" />
                    </DockPanel>
                </TabItem>
                <TabItem
                    Header="Special Reports"
                    Name="specialReportsTab">
                    <DockPanel
                        LastChildFill="True">
                        <ScrollBar
                            Name="scrollBar2"
                            Width="20"
                            DockPanel.Dock="Right" />
                        <ListView
                            Name="specialReportsListBox"
                            ItemsSource="{Binding Path=SpecialReports, Mode=TwoWay}"
                            DockPanel.Dock="Right" />
                    </DockPanel>
                </TabItem>
            </TabControl>
        </DockPanel>

        <ContentControl
            DockPanel.Dock="Right"
            x:Name="mainContentControl" />

    </DockPanel>
</Window>
