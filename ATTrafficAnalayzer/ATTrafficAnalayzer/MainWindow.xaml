<Window
    x:Class="ATTrafficAnalayzer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="800"
    Width="1000">

    <DockPanel
        LastChildFill="True">

        <Menu
            DockPanel.Dock="Top">
            <Menu.Background>
                <SolidColorBrush />
            </Menu.Background>
            <MenuItem
                Header="_FILE"
                DockPanel.Dock="Top">
                <MenuItem
                    Header="_Import VS File"
                    Click="MenuItemImportClick" />
            </MenuItem>
        </Menu>

        <ToolBarTray
            DockPanel.Dock="Top">
            <ToolBar
                Band="1"
                BandIndex="1">
                <RadioButton
                    Name="tableradio"
                    GroupName="display"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="Table"
                    Checked="switchScreen"
                    Background="White"></RadioButton>
                <RadioButton
                    Name="graphradio"
                    GroupName="display"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="Graph"
                    Checked="switchScreen"
                    Background="White"></RadioButton>
                <Label
                    Margin="5,0,0,0">Start Date:</Label>
                <DatePicker
                    Background="White" />
                <Label
                    Margin="5,0,0,0">End Date:</Label>
                <DatePicker
                    Background="White" />
                <RadioButton
                    Margin="5,0,0,0"
                    GroupName="mode"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="VS"
                    Name="vsradio"
                    Checked="switchScreen"
                    Background="White"></RadioButton>
                <RadioButton
                    GroupName="mode"
                    Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                    MinWidth="45"
                    BorderBrush="#FF457EFF"
                    Content="SM"
                    Name="smradio"
                    Checked="switchScreen"
                    Background="White"></RadioButton>
            </ToolBar>
        </ToolBarTray>

        <StackPanel
            DockPanel.Dock="Left"
            Margin="0,0,0,0"
            Name="stackPanel1">
            <Label
                Content="Standard Reports"
                Height="28"
                Name="label1"
                Background="#FF007ACC"
                FontWeight="Normal"
                FontSize="14"
                Foreground="White"
                Padding="5" />
            <StackPanel
                Grid.Column="0"
                Grid.Row="2"
                HorizontalAlignment="Left"
                Margin="0,0,0,0"
                Name="stackPanel2"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Visibility="Visible">

                <Button
                    Content="New"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="newBtn"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    OpacityMask="{x:Null}"></Button>
                <Button
                    Content="Modify"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="modifyBtn"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"></Button>
                <Button
                    Content="Save"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="saveBtn"
                    VerticalAlignment="Top"
                    BorderBrush="{x:Null}"
                    Background="{x:Null}"></Button>
                <Button
                    Content="Delete"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    Name="deleteBtn"
                    VerticalAlignment="Top"
                    Background="{x:Null}">
                    <Button.BorderBrush>
                        <SolidColorBrush />
                    </Button.BorderBrush>
                </Button>
            </StackPanel>

            <TabControl
                HorizontalAlignment="Left"
                Name="tabControl1"
                Margin="0,0,0,0"
                TabStripPlacement="Bottom">
                <TabItem
                    Header="Standard Reports"
                    Name="standardReportsTab">
                    <Grid
                        DataContext="{Binding}">
                        <ListBox
                            Margin="0,0,0,0"
                            Name="standardReportsListBox"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="2" />
                        <ScrollBar
                            HorizontalAlignment="Right"
                            Margin="0,0,0,0"
                            Name="scrollBar1"
                            VerticalAlignment="Top"
                            Width="18" />
                        
                    </Grid>
                </TabItem>
                <TabItem
                    Header="Special Reports"
                    Name="specialReportsTab">
                    <Grid
                        DataContext="{Binding}">
                        <ListBox
                            HorizontalAlignment="Left"
                            Margin="0,0,0,0"
                            Name="specialReportsListBox" />
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>

        <ContentControl
            DockPanel.Dock="Right"
            x:Name="mainContentControl" />
    </DockPanel>
</Window>
