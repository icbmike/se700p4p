<UserControl x:Class="ATTrafficAnalayzer.Views.Controls.ReportList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             Margin="10">
    <DockPanel LastChildFill="True"
               DockPanel.Dock="Left">
        <Label Content="Report Browser"
               Height="28"
               Background="#428FBF"
               FontWeight="Normal"
               FontSize="14"
               Foreground="White"
               Padding="5"
               DockPanel.Dock="Top" />
        <WrapPanel
            Orientation="Horizontal"
                   DockPanel.Dock="Top">
            <Button Content="_New"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    OpacityMask="{x:Null}"
                    Click="newBtn_Click">
            </Button>
            <Button Content="_Edit"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="editBtn_Click">
            </Button>
            <Button Content="_Delete"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    Click="deleteBtn_Click">
                <Button.BorderBrush>
                    <SolidColorBrush />
                </Button.BorderBrush>
            </Button>
            <Button Content="Rename"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="renameBtn_Click" />
        </WrapPanel>

        <TabControl HorizontalAlignment="Left"
                    TabStripPlacement="Bottom"
                    DockPanel.Dock="Top">
            <TabItem Header="Standard Reports">
                <DockPanel LastChildFill="True">
                    <ScrollBar
                        Width="20"
                               DockPanel.Dock="Right" />
                    <TreeView Name="StandardReportsTreeView"
                              DockPanel.Dock="Right" x:FieldModifier="private">
                        <TreeView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Edit"
                                          Click="editBtn_Click" />
                                <MenuItem Header="Delete"
                                          Click="deleteBtn_Click" />
                                <MenuItem Header="Rename"
                                          Click="renameBtn_Click" />
                                <MenuItem Header="Export to CSV"
                                          Click="exportBtn_Click" />
                            </ContextMenu>
                        </TreeView.ContextMenu>
                    </TreeView>
                </DockPanel>
            </TabItem>
            <TabItem Header="Special Reports">
                <DockPanel LastChildFill="True">
                    <ScrollBar
                        Width="20"
                               DockPanel.Dock="Right" />
                    <TreeView
                        ItemsSource="{Binding Path=SpecialReports, Mode=TwoWay}"
                              DockPanel.Dock="Right" />
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>