<UserControl x:Class="ATTrafficAnalayzer.Views.Controls.Toolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:ATTrafficAnalayzer.Models.Settings"
             mc:Ignorable="d">

    <ToolBarPanel Name="ToolbarPanel"
                  Background="{x:Null}">
        <ToolBarPanel.DataContext>
            <settings:SettingsTray />
        </ToolBarPanel.DataContext>
        <ToolBar Name="MainToolbar"
                 Band="1"
                 BandIndex="1"
                 VerticalContentAlignment="Stretch"
                 HorizontalContentAlignment="Stretch"
                 Foreground="White"
                 ToolBarTray.IsLocked="True"
                 Background="{x:Null}"
                 Loaded="MainToolbar_OnLoaded">

            <Button Name="HomeButton"
                    Margin="5,0"
                    Click="SwitchScreen"
                    Style="{StaticResource AtToolbarButtonStyle}"
                    MouseLeftButtonDown="SwitchScreen"
                    Background="{x:Null}"
                    Foreground="{x:Null}">
                <Image Source="/Resources\Images\Icons\glyphicons_020_home.png" />
            </Button>
            <Button Name="MonthlySummaryButton"
                    Click="SwitchMode"
                    Style="{StaticResource AtToolbarButtonStyle}"
                    Margin="1"
                    Background="{x:Null}"
                    Foreground="{x:Null}">
                <Image Source="/Resources\Images\Icons\glyphicons_420_tower.png" />
            </Button>
            <Button Name="RegularReportsButton"
                    Click="SwitchMode"
                    Style="{StaticResource AtToolbarButtonStyle}"
                    Margin="1"
                    Background="{x:Null}"
                    Foreground="{x:Null}">
                <Image Source="/Resources\Images\Icons\glyphicons_450_factory.png" />
            </Button>
            <Button Name="FaultsButton"
                    Click="SwitchScreen"
                    Style="{StaticResource AtToolbarButtonStyle}"
                    Margin="1"
                    Background="{x:Null}"
                    Foreground="{x:Null}">
                <Image Source="/Resources\Images\Icons\glyphicons_421_send.png" />
            </Button>

            <Label Margin="10,0,4,0"
                   Foreground="White"
                   FontSize="16"
                   Content="Start Date:" />
            <DatePicker Name="StartDatePicker"
                        Background="White"
                        SelectedDate="{Binding StartDate}"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        SelectedDateChanged="DateOrInverval_SelectionChanged" />
            <Label Margin="20,0,0,0"
                   Foreground="#FFF6F6F6"
                   FontSize="16"
                   Content="End Date:" />
            <DatePicker Name="EndDatePicker"
                        Background="White"
                        SelectedDate="{Binding EndDate}"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        SelectedDateChanged="DateOrInverval_SelectionChanged" />

            <Label Margin="20,0,0,0"
                   Foreground="White"
                   FontSize="16"
                   Content="Interval" />
            <ComboBox Height="23"
                      Name="IntervalComboBox"
                      Width="80"
                      SelectedValue="{Binding Path=Interval, Converter={settings:IntervalConverter}}"
                      SelectedValuePath="Content"
                      SelectedIndex="0"
                      Foreground="Black"
                      FontSize="16"
                      SelectionChanged="DateOrInverval_SelectionChanged">
                <ComboBoxItem>5 min</ComboBoxItem>
                <ComboBoxItem>15 min</ComboBoxItem>
                <ComboBoxItem>30 min</ComboBoxItem>
                <ComboBoxItem>60 min</ComboBoxItem>
            </ComboBox>

            <Button Name="TableButton"
                    Content="Table"
                    Margin="10,0,1,0"
                    Click="SwitchScreen"
                    Style="{StaticResource AtToolbarButtonStyle}"
                    Background="{x:Null}"
                    Foreground="{x:Null}">
                <Image Source="/Resources\Images\Icons\glyphicons_119_table.png" />
            </Button>
            <Button Name="GraphButton"
                    Click="SwitchScreen"
                    Style="{StaticResource AtToolbarButtonStyle}"
                    Margin="1,0,1,0"
                    Content="Graph"
                    Background="{x:Null}"
                    Foreground="{x:Null}">
                <Image Source="/Resources\Images\Icons\glyphicons_040_stats.png" />
            </Button>

        </ToolBar>
    </ToolBarPanel>
</UserControl>
