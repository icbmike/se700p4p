<UserControl x:Class="ATTrafficAnalayzer.Views.Controls.ApproachTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:qz="http://www.quickzip.org/UserControls"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="1680"
             Loaded="ApproachTableOnLoaded">
    
        <Border BorderBrush="Black"
            BorderThickness="1"
            Margin="20,15,20,5"
            Padding="5"
            Background="#22356199">
        <StackPanel>

            <qz:HtmlTextBlock x:Name="ApproachSummary"
                   Visibility="Visible"
                   IsEnabled="False"
                              Html="{Binding ApproachName}">
                
            </qz:HtmlTextBlock>

            <ListView Name="ApproachListView"
                  Margin="5,10,5,10"
                  ScrollViewer.CanContentScroll="False"
                  FontSize="12"
                  Width="Auto"
                  HorizontalContentAlignment="Stretch"
                  />

        </StackPanel>
    </Border>
</UserControl>
