<Border
    x:Class="ATTrafficAnalayzer.ApproachControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    BorderThickness="2"
    BorderBrush="Black"
    Width="150"
    Height="150"
    Background="DarkCyan"
    CornerRadius="5"
    Padding="5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>


        <TextBox
            Name="Approach"
            Grid.Row="0"
            Text="{Binding ApproachName}"
            Background="Transparent"
            Foreground="White"
            Focusable="True"
            />

        <ListView
            Grid.Row="1"
            ItemsSource="{Binding Path=Detectors, Mode=TwoWay}"
            AllowDrop="True"
            Background="Transparent"
            PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
            Drop="ApproachDrop"/>
    </Grid>
</Border>
