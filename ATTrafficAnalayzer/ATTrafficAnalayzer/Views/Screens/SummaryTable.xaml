<UserControl x:Class="ATTrafficAnalayzer.Views.Screens.SummaryTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ATTrafficAnalayzer.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="1100"
             d:DesignWidth="1720">
    <ScrollViewer HorizontalContentAlignment="Stretch">
        <StackPanel Margin="10">

            <Label Name="ScreenTitle"
                   Content="No Summary Selected"
                   FontSize="28"
                   Margin="20,0"
                   x:FieldModifier="private"
                   FontWeight="Bold" />

            <controls:TableApproachDisplay Name="AmPeakApproachDisplay" />
            <controls:TableApproachDisplay Name="PmPeakApproachDisplay" />
            <controls:TableApproachDisplay Name="SumApproachDisplay" />

        </StackPanel>
    </ScrollViewer>
</UserControl>