<UserControl x:Class="ATTrafficAnalayzer.Views.ReportConfigurationScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Row="1"
                  Grid.Column="0"
                  ItemsSource="{Binding IntersectionList}"
                  SelectedValue="{Binding SelectedIntersection}"
                  SelectionChanged="OnIntersectionSelectionChanged"
                  Margin="10,10,0,0"
                  FontSize="16"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  Padding="6,5,5,5" />
        <ListView Name="DetectorListView"
                  Grid.Column="0"
                  Grid.Row="2"
                  Grid.RowSpan="2"
                  Margin="10,0,0,10"
                  VerticalAlignment="Stretch"
                  ItemsSource="{Binding Path=DetectorList, Mode=TwoWay}"
                  PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
                  HorizontalContentAlignment="Center"
                  FontSize="16"
                  BorderThickness="1"
                  x:FieldModifier="private" />

        <TextBox Name="ConfigNameTextBox"
                 Grid.Row="0"
                 Grid.Column="0"
                 Grid.ColumnSpan="3"
                 FontSize="30"
                 Text="{Binding ConfigName}"
                 Margin="10"
                 FontWeight="Bold"
                 Padding="3,6"
                 BorderThickness="1">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FF276D97" />
            </TextBox.BorderBrush>
        </TextBox>

        <ScrollViewer Grid.Row="1"
                      Grid.Column="1"
                      Grid.RowSpan="2"
                      Grid.ColumnSpan="2"
                      VerticalScrollBarVisibility="Auto">
            <WrapPanel Name="Approaches"
                       x:FieldModifier="private">
                <Border CornerRadius="70"
                        AllowDrop="True"
                        Drop="NewApproachDrop"
                        Margin="20,20,0,0"
                        Height="120"
                        Width="120"
                        BorderThickness="0">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource HighlightLight}" />
                    </Border.Background>
                    <Image Source="/ATTrafficAnalayzer;component/Resources/Images/Add.png"
                           Width="80"
                           Height="80" />
                </Border>
            </WrapPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="3"
                    Grid.Column="1"
                    Orientation="Horizontal">
            <Button Margin="20,0,0,10"
                    Padding="12,6"
                    Click="Distribute_Click"
                    Content="Distribute Detectors"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="18.667">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource HighlightLight}" />
                </Button.Background>
            </Button>
            <Button Margin="20,0,0,10"
                    Padding="12,6"
                    Content="Group All"
                    Click="Group_Click"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="18.667">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource HighlightLight}" />
                </Button.Background>
            </Button>
        </StackPanel>
        
        <Button Margin="0,0,10,10"
                Grid.Row="3"
                Grid.Column="2"
                Content="Save"
                Click="Save_Click"
                BorderThickness="0"
                Foreground="White"
                FontSize="18.667"
                Padding="12,6">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource HighlightLight}" />
            </Button.Background>
        </Button>
        
    </Grid>
</UserControl>
